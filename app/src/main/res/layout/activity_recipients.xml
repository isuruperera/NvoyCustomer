<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/recipients_layout"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/expandable_list_search_courier_layout">

                <ExpandableListView
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="2dp"
                    android:id="@+id/expandable_list_search_courier">
                </ExpandableListView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/expandable_list_search_courier_layout"
            android:id="@+id/friend_request">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="ADD RECIPIENT"
                android:layout_margin="3dp"
                android:textAlignment="center"
                android:id="@+id/nvoy_text"
                android:textSize="25dp"

                android:textColor="@color/white"
                android:background="@color/colorAccent"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:gravity="bottom"
                    android:id="@+id/text_send_request"
                    android:layout_weight="15"
                    android:paddingTop="28dp"
                    android:textSize="15dp"
                    android:hint="Email Address"/>

                <Button
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_weight="2"
                    android:text="+"
                    android:id="@+id/btn_send_request"
                    android:background="@drawable/ripple_effect"
                    android:textColor="@color/common_google_signin_btn_text_dark_default"
                    android:textSize="20dp"
                    android:layout_margin="3dp"/>

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>





</RelativeLayout>
